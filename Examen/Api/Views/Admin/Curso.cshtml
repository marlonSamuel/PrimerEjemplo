
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Curso";
}

<div class="container" style="margin-top: 100px;">
    <div data-bind="visible: model.cursoController.gridMode()">
        <div class="jumbotron">
            Cursos
        </div>
        <div class="pull-right">
            <a href="#" class="btn btn-success mybtn" data-bind="click: model.cursoController.nuevo"><i class="fa fa-plus-circle"></i> Nuevo</a>
        </div>
        <table id="categoriaGrid" class="table table-hover">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Curso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody data-bind="dataTablesForEach : {
                                    data: model.cursoController.cursos,
                                    options: dataTableOptions
                                  }">
                <tr>
                    <td data-bind="text: cursoId"></td>
                    <td data-bind="text: nombre"></td>
                    <td>
                        <a href="#" class="btn btn-warning btn-xs" data-bind="click: model.cursoController.editar"><i class="fa fa-pencil"></i></a>
                        <a href="#" class="btn btn-danger btn-xs" data-bind="click: model.cursoController.remover"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <div data-bind="visible: model.cursoController.insertMode()">

        <form name="cursoForm" id="cursoForm" class="form" data-bind="with: model.cursoController.curso">
            <div class="row">
                <div class="form-group col-sm-7 col-md-7">
                    <label for="nombre">Nombre<span class="text-danger"> *</span></label>
                    <input id="nombre" name="nombre" type="text" class="form-control" data-bind="value: nombre"
                           data-error=".errorNombre"
                           minlength="3" maxlength="100" required>
                    <span class="errorNombre text-danger help-inline"></span>
                </div>
            </div>
            <div class="form-group">
                <p class="text-center">
                    <button type="button" class="btn btn-info" data-bind="click:  model.cursoController.guardar "><i class="fa fa-save"></i> Guardar</button>
                    <button type="button" class="btn btn-danger" data-bind="click:  model.cursoController.cancelar"><i class="fa fa-undo"></i> Cancel</button>
                </p>
            </div>
        </form>
    </div>
</div>


<script>
        $(document).ready(function () {
            model.cursoController.initialize();
        });
</script>

